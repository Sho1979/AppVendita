rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORANEO: Regole permissive per sviluppo
    // TODO: Ripristinare le regole di sicurezza per produzione
    
    // Regole per gli utenti
    match /users/{userId} {
      allow read, write: if true; // Temporaneamente permissivo
    }

    // Regole per i punti vendita
    match /sales_points/{pointId} {
      allow read, write: if true; // Temporaneamente permissivo
    }

    // Regole per le voci del calendario
    match /calendar_entries/{entryId} {
      allow read, write: if true; // Temporaneamente permissivo
    }

    // Regole per i dati Excel
    match /excel_data/{docId} {
      allow read, write: if true; // Temporaneamente permissivo
    }

    // Regole per le referenze attive
    match /active_references/{docId} {
      allow read, write: if true; // Temporaneamente permissivo
    }

    // Regole per le configurazioni dell'app
    match /app_config/{configId} {
      allow read, write: if true; // Temporaneamente permissivo
    }
  }
} 